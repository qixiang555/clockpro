/* pages/feedback/feedback.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(145deg, #f0f4f8, #d9e2ec);
  min-height: 100vh;
}

.card {
  background-color: #ffffff;
  width: 90%;
  max-width: 600rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sub-header {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.stu {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.student {
  font-size: 28rpx;
  color: #555;
  background-color: #e3f2fd;
  padding: 15rpx 30rpx;
  margin: 10rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease-in-out;
}

.student:hover {
  transform: scale(1.05);
}

.back {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.mail {
  font-size: 30rpx;
  color: #007aff;
  text-align: center;
  text-decoration: underline;
  transition: color 0.2s ease-in-out;
}

.mail:hover {
  color: #005bb5;
}

.logo {
  width: 120rpx;
  height: auto;
  margin-top: 30rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  transition: box-shadow 0.2s ease-in-out;
}

.logo:hover {
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.3);
}
